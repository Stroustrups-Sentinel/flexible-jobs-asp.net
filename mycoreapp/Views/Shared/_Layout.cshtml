<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flexible Jobs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mycoreapp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="./images/logos/fj-logo-color.svg" height="48" width="48" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top  fj-bg-black fj-white text-muted">
        <div class="p-2 fw-bold">
        <div class="row">
            <div class="col-3 d-flex">
                <img src="./images/logos/fj-logo-color.png" class="footer-logo-fj" />
            </div>
            <div class="col-6 pt-4 d-flex justify-content-center ">
                <!-- Home Terms and Conditions Privacy policy Contac -->
                <a class="fj-white mx-2" asp-area="" asp-controller="Home" asp-action="Home">Home</a>
                <a class="fj-white  mx-2" asp-area="" asp-controller="Home" asp-action="TermsandConditions">Terms and Conditions</a>
                <a class="fj-white  mx-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="fj-white  mx-2" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                <a class="fj-white  mx-2" asp-area="" asp-controller="Home" asp-action="About">About</a>
            </div>
            <div class="col-3 d-flex">
                <p class="h6 p-2 fj-bg-dark-primary fj-radius-sm footer-shield-shadow">
                    all<br/>
                    illustration<br/>
                    images are<br/>
                    attributed to<br/>
                    <strong>icons8</strong>

                </p>
                <p> </p>
                <div>
                    <img src="./images/icons logo front view.png" class="footer-logo"/>
                </div>
            </div>
        </div>
        <p align="center">    &copy; 2023 | Flexible Jobs | All Rights reserved </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
